        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.studentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentMobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tutor_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.studentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.studentID">Details</a> |
