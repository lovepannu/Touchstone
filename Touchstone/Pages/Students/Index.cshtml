<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].studentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].studentMobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].studentEmail)
            </th>
