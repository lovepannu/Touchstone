        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.batchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.courseCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.branch_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.batchID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.batchID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.batchID">Delete</a>
            </td>
        </tr>
}
    </tbody>
